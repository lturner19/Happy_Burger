<h1>EAT DA BURGER</h1>
<br>
<br>
<img src="../img/happy_burger.jpg" alt="Happy Burger image">
<br>
<div class="container">
  <div class="row">
    <div class="col-sm-3" id="not-devoured">
      <h3>Burgers not devoured</h3>
      <ol>
        {{#each burgers}}
        {{#unless devour}}
        {{> burger-block devour = false}}
        {{!-- removed burgers/ --}}
        {{/unless}}
        {{/each}}
      </ol>
    </div>
    <div class="col-sm-3" id ="devoured">
      <h3>Devoured Burgers</h3>
      <ol>
        {{#each burgers}}
        {{#if devour}}
        {{> burger-block devour = true}}
        {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>
</div>

<br>
<br>

<form class="create-form">
  <div class="form-group">
    <label for="burger" class="burger-name">Burger Name</label>
    <br>
    <br>
    <textarea type="text" id="burger" name="name" rows="5" cols="30"
      placeholder="Please add a burger you would like to devour."></textarea>
  </div>
  <button type="submit">Submit</button>
</form>

